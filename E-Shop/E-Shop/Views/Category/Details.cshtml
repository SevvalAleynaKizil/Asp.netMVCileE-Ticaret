                </div>

            </div>
        </div>
    </div>
</section><!--/slider-->

<section>
    <div class="container">
        <div class="row">
            @Html.Action("CategoryList", "Category")

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <!--features_items-->
                    <h2 class="title text-center">ÜRÜNLERİMİZ</h2>
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">

                                        <a href="/Product/Details/@item.Id/@(Seo.AdresDuzenle(item.Name))"><img src="~/Content/Image/@item.Image" width="290,5" height="205" alt="" /></a>
                                        <h2 style="color:black">@item.Price ₺</h2>
                                        <p>@item.Name</p>
                                        <a href="/Product/Details/@item.Id/@(Seo.AdresDuzenle(item.Name))" class="btn btn-default add-to-cart">Ürün Detay</a>
                                    </div>


                                </div>

                            </div>
                        </div>
                    }





                </div><!--features_items-->

                @Html.Action("PopularProduct", "Product")

            </div>
        </div>
    </div>
</section>
